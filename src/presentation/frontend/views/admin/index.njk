{% extends 'base.njk' %}
{% block body %}
    <div class="fr-mt-4w container mx-auto mb-auto px-4">
        <h3>Liste des applications</h3>
        <div class="flex flex-col">
            <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                    <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                        <table class="divide-y divide-gray-200 table-fixed w-full">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col" class="w-1/2 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                                    <th scope="col" class="w-1/6 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">DataPass</th>
                                    <th scope="col" class="w-1/6 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Souscriptions</th>
                                    <th scope="col" class="w-1/6 relative px-6 py-3">
                                        <span class="sr-only">Éditer</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                {% for application in applications %}
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-gray-900 truncate">{{ application.name }}</div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-gray-500">
                                                <a href="https://datapass.api.gouv.fr/api-particulier/{{ application.dataPassId }}" class="text-indigo-600 hover:text-indigo-900">{{ application.dataPassId }}</a>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            {% for subscription in application.subscriptions %}
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-800 text-blue-100">{{ subscription }}</span>
                                            {% endfor %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                            <a href="/admin/applications/{{ application.id }}/" class="text-indigo-600 hover:text-indigo-900">Éditer</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
