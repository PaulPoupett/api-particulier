{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDirs": ["src", "test"],
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": ["src/**/*.spec.ts"]
}
